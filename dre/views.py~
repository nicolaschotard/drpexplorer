from django.shortcuts import render
from django.http import HttpResponse
from dre import dre as dremod

HEADER = """
<head>
<title>LSST DRE</title>
<meta charset="UTF-8">
<style>
body {
    background-color: #FFFFFF;
}
    
.navbar {
/* position: absolute; */
/* top: 0; left: 0; */
height: 47px;
background-color: #F5F5F5;
}
  
  
a {
color: black;
margin: 20px;
font-size: 20px;
text-decoration: none;
font-family: Arial, Helvetica, sans-serif;
}
   
a:hover {
color: grey;
font-size: 20px;
}
   
a:focus {
color: grey;
font-size: 20px;
}
.navbar ul {
    list-style-type: none;
    text-align: center ;
    line-height: 47px ;
}
.navbar li {
    display: inline-block;
}
</style>
</head>
<header>
<nav class="navbar">
    <ul>
        <li><a href="/" style="font-size: 26px; hover=grey; color: black;">HOME</a></li>
        <li><a href="/dataproc" style="hover=grey; color: black;">Processing</a></li>
        <li><a href="/catexp" style="hover=grey; color: black;">Catalogs</a></li>
        <li><a href="/imexp" style="hover=grey; color: black;">Images</a></li>
        <li><a href="/doc" style="hover=grey; color: black;">Documentation</a></li>
    </ul>
 </nav>
</header>
    """

def main(request):
    """Main page."""
    mainpage = HEADER
    return HttpResponse(mainpage)

def dataproc(request):
    """Data processing expolrer."""
    content = dremod.dre(request)
    header = HEADER.replace('black;">Processing', 'grey;">Processing')
    content.addheader(header)
    return HttpResponse(content)

def catexp(request):
    """Catalogs explorer."""
    content = dremod.dre(request)
    header = HEADER.replace('black;">Catalogs', 'grey;">Catalogs')
    content.addheader(header)
    return HttpResponse(content)

def imexp(request):
    """Images explorer."""
    content = dremod.dre(request)
    header = HEADER.replace('black;">Images', 'grey;">Images')
    content.addheader(header)
    return HttpResponse(content)
    
def doc(request):
    """Help and documenation."""
    header = HEADER.replace('black;">Documentation', 'grey;">Documentation')
    documentation = header
    return HttpResponse(documentation)


